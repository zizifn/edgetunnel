{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["@cloudflare/workers-types", "@types/jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
